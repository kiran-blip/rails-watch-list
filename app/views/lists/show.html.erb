<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark|%>
  <p><%= bookmark.movie.title %> - <%= bookmark.comment %> - <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %></p>
  <hr>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
